<style>
/* ================== MINES ‚Äì DOPAMINE UI ================== */

:root {
  --green: #10b981;
  --red: #ef4444;
  --gold: #f59e0b;
}

.mines-container {
  max-width: 900px;
  margin: 0 auto;
  padding: 2rem;
  color: #fff;
}

.mines-header {
  text-align: center;
  margin-bottom: 2rem;
}

.mines-header h1 {
  font-size: 2.6rem;
  letter-spacing: 5px;
}

.balance-bar {
  display: inline-block;
  margin-top: .6rem;
  padding: .45rem 1.3rem;
  border-radius: 999px;
  background: rgba(245,158,11,.15);
  color: var(--gold);
  font-weight: bold;
}

/* Panel */
.mines-panel {
  background: rgba(0,0,0,.45);
  border-radius: 20px;
  padding: 2rem;
  box-shadow: 0 20px 60px rgba(0,0,0,.75);
}

/* Controls */
.mines-controls {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.mines-controls input {
  flex: 1;
  min-width: 140px;
  background: rgba(255,255,255,.1);
  border: 1px solid rgba(255,255,255,.25);
  border-radius: 12px;
  padding: .8rem;
  color: #fff;
}

.mines-controls button {
  min-width: 130px;
  border: none;
  padding: .8rem 1.5rem;
  border-radius: 12px;
  font-weight: bold;
  color: #fff;
  cursor: pointer;
  transition: transform .15s, box-shadow .15s;
  background: linear-gradient(135deg, var(--green), #047857);
}

.mines-controls button:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 30px rgba(16,185,129,.6);
}

.mines-controls button:disabled {
  background: #444;
  cursor: not-allowed;
  box-shadow: none;
}

#cashout {
  background: linear-gradient(135deg, var(--gold), #b45309);
}

#cashout.pulse {
  animation: pulse 1.2s infinite;
}

@keyframes pulse {
  0% { box-shadow: 0 0 0 rgba(245,158,11,.4); }
  50% { box-shadow: 0 0 35px rgba(245,158,11,.9); }
  100% { box-shadow: 0 0 0 rgba(245,158,11,.4); }
}

/* Grid */
.mines-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 14px;
  margin-top: 2rem;
  perspective: 900px;
}

.mine-cell {
  aspect-ratio: 1;
  border-radius: 16px;
  background: linear-gradient(145deg, #1f1f1f, #0f0f0f);
  border: 2px solid rgba(255,255,255,.08);
  cursor: pointer;
  font-size: 1.7rem;
  display: flex;
  align-items: center;
  justify-content: center;
  transform-style: preserve-3d;
  transition: transform .6s ease, box-shadow .2s;
  animation: idlePulse 2.6s ease-in-out infinite;
}

.mine-cell:hover {
  transform: translateY(-4px) scale(1.05);
  box-shadow: 0 14px 40px rgba(0,0,0,.8);
}

.mine-cell.revealed {
  animation: none;
  cursor: default;
  transform: rotateY(180deg);
}

.mine-cell span {
  backface-visibility: hidden;
  transform: rotateY(180deg);
}

/* States */
.mine-cell.safe {
  background: linear-gradient(145deg, var(--green), #064e3b);
  box-shadow: 0 0 30px rgba(16,185,129,.8);
}

.mine-cell.mine {
  background: linear-gradient(145deg, var(--red), #7f1d1d);
  box-shadow: 0 0 40px rgba(239,68,68,.9);
  animation: shake .35s;
}

.mine-cell.near {
  box-shadow: 0 0 18px rgba(239,68,68,.6);
}

/* Animations */
@keyframes idlePulse {
  0%,100% { box-shadow: 0 0 0 rgba(255,255,255,.05); }
  50% { box-shadow: 0 0 14px rgba(255,255,255,.14); }
}

@keyframes shake {
  0% { transform: rotateY(180deg) translateX(0); }
  25% { transform: rotateY(180deg) translateX(-4px); }
  50% { transform: rotateY(180deg) translateX(4px); }
  75% { transform: rotateY(180deg) translateX(-4px); }
  100% { transform: rotateY(180deg) translateX(0); }
}

/* Message */
.mines-message {
  margin-top: 1.6rem;
  text-align: center;
  font-size: 1.5rem;
  font-weight: bold;
}

.mines-message.pop {
  animation: pop .3s ease;
}

.mines-message.loss {
  color: var(--red);
}

@keyframes pop {
  0% { transform: scale(1); }
  50% { transform: scale(1.4); }
  100% { transform: scale(1); }
}

.back-link {
  display: inline-block;
  margin-top: 2rem;
  color: #aaa;
  text-decoration: none;
}

.back-link:hover { color: #fff; }
</style>

<div class="mines-container">
  <div class="mines-header">
    <h1>MINES</h1>
    <div class="balance-bar">üí∞ <span id="balance"><%= user.credits %></span></div>
  </div>

  <div class="mines-panel">
    <div class="mines-controls">
      <input type="number" id="betAmount" placeholder="Bet amount" min="1">
      <input type="number" id="minesCount" placeholder="Mines (1‚Äì24)" min="1" max="24">
      <button id="startGame">Start</button>
      <button id="cashout" disabled>Cashout</button>
    </div>

    <div id="grid" class="mines-grid"></div>
    <div id="message" class="mines-message"></div>
  </div>

  <a href="/lobby" class="back-link">‚Üê Back to Lobby</a>
</div>

<script>
const startBtn = document.getElementById('startGame')
const cashoutBtn = document.getElementById('cashout')
const betInput = document.getElementById('betAmount')
const minesInput = document.getElementById('minesCount')
const grid = document.getElementById('grid')
const message = document.getElementById('message')
const balance = document.getElementById('balance')

let activeGame = false
let safeClicks = 0

startBtn.onclick = async () => {
  const bet = Number(betInput.value)
  const mines = Number(minesInput.value)

  const res = await fetch('/api/mines/start', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ bet, mines })
  })

  const data = await res.json()
  if (!res.ok) {
    message.textContent = data.error
    message.className = 'mines-message loss'
    return
  }

  activeGame = true
  safeClicks = 0
  cashoutBtn.disabled = false
  cashoutBtn.classList.remove('pulse')
  message.textContent = 'Pick a tile‚Ä¶'
  message.className = 'mines-message'
  renderGrid(data.gridSize)
}

function renderGrid(size) {
  grid.innerHTML = ''
  for (let i = 0; i < size; i++) {
    const cell = document.createElement('button')
    cell.className = 'mine-cell'
    cell.innerHTML = '<span></span>'
    cell.onclick = () => reveal(cell, i)
    grid.appendChild(cell)
  }
}

async function reveal(cell, index) {
  if (!activeGame || cell.classList.contains('revealed')) return

  cell.classList.add('revealed')

  const res = await fetch('/api/mines/click', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ index })
  })

  const data = await res.json()
  const inner = cell.querySelector('span')

  if (data.hitMine) {
    cell.classList.add('mine')
    inner.textContent = 'üí£'
    message.textContent = 'üí• BOOM!'
    message.className = 'mines-message loss'
    activeGame = false
    cashoutBtn.disabled = true
    cashoutBtn.classList.remove('pulse')
    return
  }

  cell.classList.add('safe')
  inner.textContent = 'üíé'
  safeClicks++

  message.textContent = `Multiplier x${data.multiplier}`
  message.classList.add('pop')
  setTimeout(() => message.classList.remove('pop'), 300)

  if (safeClicks >= 2) cashoutBtn.classList.add('pulse')

  Array.from(grid.children).forEach(n => {
    if (n !== cell && !n.classList.contains('revealed')) {
      n.classList.add('near')
      setTimeout(() => n.classList.remove('near'), 200)
    }
  })

  balance.textContent = data.balance
}

cashoutBtn.onclick = async () => {
  const res = await fetch('/api/mines/cashout', { method: 'POST' })
  const data = await res.json()

  message.textContent = `üéâ You won ${data.winAmount}`
  message.className = 'mines-message'
  balance.textContent = data.balance
  activeGame = false
  cashoutBtn.disabled = true
  cashoutBtn.classList.remove('pulse')
}
</script>

