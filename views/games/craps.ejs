<script src="/socket.io/socket.io.js"></script>

<script>
/* ---------- DIE ROTATION LOGIC ---------- */
function getRotationForValue(value) {
  const rotations = {
    1: 'rotateX(0deg) rotateY(0deg)',
    2: 'rotateX(0deg) rotateY(-90deg)',
    3: 'rotateX(-90deg) rotateY(0deg)',
    4: 'rotateX(90deg) rotateY(0deg)',
    5: 'rotateX(0deg) rotateY(90deg)',
    6: 'rotateX(0deg) rotateY(180deg)'
  }
  return rotations[value]
}

document.addEventListener('DOMContentLoaded', function () {
  const socket = io()
  let currentCredits = Number('<%= user.credits %>')
  let activeBets = new Map()
  let point = null
  let isRolling = false

  /* ---------- UPDATE GAME PHASE ---------- */
  function updateGamePhase() {
    const phaseElement = document.getElementById('gamePhase')
    if (!point) {
      phaseElement.textContent = 'Come Out Roll - Place Your Bets'
    } else {
      phaseElement.textContent = `Point is ${point} - Roll to Hit Point or 7 Out`
    }
  }

  /* ---------- BETTING AREAS ---------- */
  document.querySelectorAll('[data-bet]').forEach(area => {
    area.addEventListener('click', e => {
      e.stopPropagation()
      if (isRolling) return
      placeBet(area.dataset.bet)
    })
  })

  document.getElementById('rollBtn').addEventListener('click', rollDice)
  document.getElementById('clearBtn').addEventListener('click', clearAllBets)

  window.setBetAmount = amount =>
    document.getElementById('betAmount').value = amount

  /* ---------- BET LOGIC ---------- */
  function placeBet(betType) {
    const betAmount = Number(document.getElementById('betAmount').value)
    if (betAmount <= 0) return alert('Invalid bet')

    let total = betAmount
    activeBets.forEach(b => total += b.amount)
    if (total > currentCredits) return alert('Insufficient credits')

    if (activeBets.has(betType)) {
      activeBets.get(betType).amount += betAmount
    } else {
      activeBets.set(betType, { type: betType, amount: betAmount })
    }

    updateBetDisplay(betType)
    updateTotals()
  }

  function updateBetDisplay(betType) {
    const area = document.querySelector(`[data-bet="${betType}"]`)
    const bet = activeBets.get(betType)
    if (!area) return

    const chip = area.querySelector('.bet-chip')
    if (bet) {
      area.classList.add('has-bet')
      chip.textContent = `$${bet.amount}`
      chip.classList.toggle('multiple', bet.amount > 100)
    } else {
      area.classList.remove('has-bet')
      chip.textContent = ''
      chip.classList.remove('multiple')
    }
  }

  function updateTotals() {
    let total = 0
    activeBets.forEach(b => total += b.amount)
    document.getElementById('totalBet').textContent = total.toFixed(2)

    const container = document.getElementById('activeBets')
    container.innerHTML = ''
    activeBets.forEach(b => {
      const el = document.createElement('div')
      el.className = 'active-bet-item'
      el.textContent = `${formatBetName(b.type)}: $${b.amount}`
      container.appendChild(el)
    })
  }

  function clearAllBets() {
    if (isRolling) return
    activeBets.clear()
    document.querySelectorAll('.has-bet').forEach(a => {
      a.classList.remove('has-bet')
      const chip = a.querySelector('.bet-chip')
      if (chip) chip.textContent = ''
    })
    updateTotals()
  }

  /* ---------- ENHANCED DICE ROLL WITH DEBUGGING ---------- */
  async function rollDice() {
    if (isRolling || activeBets.size === 0) {
      if (activeBets.size === 0) {
        alert('Please place a bet first!')
      }
      return
    }
    isRolling = true

    document.getElementById('rollBtn').disabled = true
    document.getElementById('clearBtn').disabled = true

    const bets = [...activeBets.values()].map(b => ({
      betType: b.type,
      amount: b.amount
    }))

    console.log('=== ROLL DICE DEBUG ===')
    console.log('Sending bets:', bets)
    console.log('Current point:', point)
    console.log('Current credits before roll:', currentCredits)

    try {
      const res = await fetch('/games/craps', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ bets, point })
      })

      if (!res.ok) {
        const errorData = await res.json()
        console.error('Server error:', errorData)
        throw new Error(errorData.error || 'Game failed')
      }

      const data = await res.json()
      
      console.log('=== SERVER RESPONSE ===')
      console.log('Full response:', data)
      console.log('Dice:', data.die1, data.die2, 'Total:', data.total)
      console.log('New credits:', data.credits)
      console.log('Total win amount:', data.totalWinAmount)
      console.log('Bet results:', data.betResults)
      
      if (!data.success) {
        throw new Error(data.error || 'Game failed')
      }

      /* ----- REALISTIC DICE ANIMATION ----- */
      const rollArea = document.getElementById('diceRollArea')
      const die1Container = document.getElementById('die1Container')
      const die2Container = document.getElementById('die2Container')
      const die1Cube = document.getElementById('die1')
      const die2Cube = document.getElementById('die2')
      const resultOverlay = document.getElementById('diceResult')
      
      // Show dice area
      rollArea.classList.add('active')
      
      // Clear previous animations
      die1Container.classList.remove('rolling-die-1')
      die2Container.classList.remove('rolling-die-2')
      die1Cube.classList.remove('spinning')
      die2Cube.classList.remove('spinning')
      
      // Force reflow
      void die1Container.offsetWidth
      
      // Start dice spinning
      die1Cube.classList.add('spinning')
      die2Cube.classList.add('spinning')
      
      // Start container movement
      die1Container.classList.add('rolling-die-1')
      die2Container.classList.add('rolling-die-2')
      
      // After animation, set final faces
      setTimeout(() => {
        die1Cube.classList.remove('spinning')
        die2Cube.classList.remove('spinning')
        
        // Set final rotation to show correct face
        die1Cube.style.transform = getRotationForValue(data.die1)
        die2Cube.style.transform = getRotationForValue(data.die2)
        
        // Show result
        document.getElementById('diceTotal').textContent = data.total
        resultOverlay.classList.add('show')
      }, 2300)

      /* ----- UPDATE CREDITS ----- */
      const oldCredits = currentCredits
      currentCredits = data.credits
      document.getElementById('credits').textContent = currentCredits.toFixed(2)
      
      console.log('Credits updated from', oldCredits, 'to', currentCredits)

      /* ----- POINT ----- */
      const oldPoint = point
      point = data.point ?? null
      document.querySelectorAll('.point-box').forEach(box =>
        box.classList.toggle('point', box.dataset.number == point)
      )
      updateGamePhase()
      
      console.log('Point updated from', oldPoint, 'to', point)

      /* ----- RESULTS - FIXED LOGIC ----- */
      const msg = document.getElementById('resultMessage')
      let won = [], lost = [], totalWon = 0

      // Process each bet result
      data.betResults.forEach(r => {
        console.log(`Bet ${r.betType}: Result=${r.result}, Amount=${r.amount}, WinAmount=${r.winAmount}`)
        
        if (r.result === 'win') {
          totalWon += r.winAmount
          won.push(`${formatBetName(r.betType)} +$${r.winAmount}`)
          activeBets.delete(r.betType)
          updateBetDisplay(r.betType)
        } else if (r.result === 'loss') {
          lost.push(`${formatBetName(r.betType)} -$${r.amount}`)
          activeBets.delete(r.betType)
          updateBetDisplay(r.betType)
        } else if (r.result === 'push') {
          // Push - bet returned but removed
          console.log(`Push on ${r.betType}, returning ${r.amount}`)
          activeBets.delete(r.betType)
          updateBetDisplay(r.betType)
        }
        // If result is 'pending', bet stays active - don't remove it
      })

      console.log('=== BET SUMMARY ===')
      console.log('Won:', won)
      console.log('Lost:', lost)
      console.log('Total won:', totalWon)
      console.log('Active bets remaining:', activeBets.size)

      // Show results message
      if (won.length && !lost.length) {
        msg.className = 'result-message win'
        msg.innerHTML =
          `ðŸŽ‰ WIN!<br>${won.join('<br>')}<br><strong>Total Won: +$${totalWon}</strong>`
      } else if (!won.length && lost.length) {
        msg.className = 'result-message loss'
        msg.innerHTML = `ðŸ˜¢ Loss<br>${lost.join('<br>')}`
      } else if (won.length && lost.length) {
        msg.className = 'result-message mixed'
        msg.innerHTML = `Mixed Results:<br>Won: ${won.join(', ')}<br>Lost: ${lost.join(', ')}`
      } else {
        // All bets are pending
        msg.className = 'result-message'
        msg.style.display = 'none'
      }

      if (won.length || lost.length) {
        msg.style.display = 'block'
      }

      updateTotals()

      // Hide dice after showing result
      setTimeout(() => {
        rollArea.classList.remove('active')
        resultOverlay.classList.remove('show')
        die1Container.classList.remove('rolling-die-1')
        die2Container.classList.remove('rolling-die-2')
      }, 4000)
      
      setTimeout(() => {
        if (msg.style.display === 'block') {
          msg.style.display = 'none'
        }
      }, 6000)

    } catch (err) {
      console.error('Roll error:', err)
      alert('Error: ' + err.message)
      
      // Re-enable buttons on error
      isRolling = false
      document.getElementById('rollBtn').disabled = false
      document.getElementById('clearBtn').disabled = false
      return
    }
    
    // Normal re-enable after animation
    setTimeout(() => {
      isRolling = false
      document.getElementById('rollBtn').disabled = false
      document.getElementById('clearBtn').disabled = false
    }, 4000)
  }

  function formatBetName(b) {
    return b.replace(/([A-Z])/g, ' $1')
            .replace(/^./, s => s.toUpperCase())
  }
})
</script>

