<style>
.craps-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 1rem;
  background: #2a2d3a;
  min-height: 100vh;
}

.craps-header {
  text-align: center;
  margin-bottom: 1.5rem;
}

.craps-header h1 {
  font-size: 2rem;
  color: #ffd700;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  margin-bottom: 0.5rem;
}

.balance-display {
  background: rgba(0, 0, 0, 0.3);
  padding: 0.5rem 1.5rem;
  border-radius: 25px;
  display: inline-block;
  font-size: 1.1rem;
  color: #ffd700;
  border: 2px solid #ffd700;
}

/* Actual Craps Table Layout */
.craps-table-container {
  background: #000;
  padding: 10px;
  border-radius: 20px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
}

.craps-table {
  background: #0d5a0d;
  border: 3px solid #ffd700;
  border-radius: 15px;
  position: relative;
  display: grid;
  grid-template-columns: 150px 1fr 150px;
  min-height: 400px;
}

/* Don't Pass Bar */
.dont-pass-bar {
  background: #0d5a0d;
  border-right: 2px solid #ffd700;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  position: relative;
  transition: all 0.3s;
}

.dont-pass-bar:hover {
  background: #0f6d0f;
}

.dont-pass-bar.selected {
  background: #1a7a1a;
  box-shadow: inset 0 0 20px rgba(255, 215, 0, 0.3);
}

.dont-pass-bar span {
  color: #fff;
  font-weight: bold;
  writing-mode: vertical-rl;
  text-orientation: mixed;
  font-size: 1.2rem;
  letter-spacing: 3px;
}

/* Center Playing Area */
.center-area {
  display: flex;
  flex-direction: column;
}

/* Numbers Box Area */
.numbers-area {
  background: #0d5a0d;
  border-bottom: 2px solid #ffd700;
  padding: 15px;
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 10px;
}

.point-box {
  background: #0a4a0a;
  border: 2px solid #ffd700;
  border-radius: 8px;
  padding: 20px 10px;
  text-align: center;
  position: relative;
  cursor: pointer;
  transition: all 0.3s;
}

.point-box:hover {
  background: #0f6d0f;
}

.point-box.active {
  background: #1a7a1a;
  box-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
}

.point-box .number {
  font-size: 2rem;
  font-weight: bold;
  color: #fff;
}

.point-box .odds {
  font-size: 0.8rem;
  color: #ffd700;
  margin-top: 5px;
}

.point-marker {
  position: absolute;
  top: -15px;
  left: 50%;
  transform: translateX(-50%);
  background: #fff;
  color: #000;
  padding: 5px 10px;
  border-radius: 50%;
  font-weight: bold;
  font-size: 0.8rem;
  display: none;
}

.point-box.point .point-marker {
  display: block;
}

/* Come Area */
.come-area {
  background: #0d5a0d;
  border-bottom: 2px solid #ffd700;
  padding: 30px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s;
  position: relative;
}

.come-area:hover {
  background: #0f6d0f;
}

.come-area.selected {
  background: #1a7a1a;
}

.come-area h3 {
  color: #fff;
  font-size: 1.5rem;
  margin: 0;
  letter-spacing: 3px;
}

/* Field Area */
.field-area {
  background: #0d5a0d;
  border-bottom: 2px solid #ffd700;
  padding: 20px;
  cursor: pointer;
  transition: all 0.3s;
}

.field-area:hover {
  background: #0f6d0f;
}

.field-area.selected {
  background: #1a7a1a;
}

.field-area h3 {
  color: #ffd700;
  text-align: center;
  margin: 0 0 10px 0;
  font-size: 1.3rem;
  letter-spacing: 2px;
}

.field-numbers {
  display: flex;
  justify-content: center;
  gap: 15px;
  flex-wrap: wrap;
}

.field-numbers span {
  background: #0a4a0a;
  padding: 5px 10px;
  border-radius: 5px;
  border: 1px solid #ffd700;
  color: #fff;
  font-weight: bold;
}

.field-numbers span.double {
  background: #8b0000;
}

/* Pass Line */
.pass-line {
  background: #0d5a0d;
  padding: 30px;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s;
  position: relative;
}

.pass-line:hover {
  background: #0f6d0f;
}

.pass-line.selected {
  background: #1a7a1a;
  box-shadow: inset 0 0 20px rgba(255, 215, 0, 0.3);
}

.pass-line h3 {
  color: #fff;
  font-size: 1.5rem;
  margin: 0;
  letter-spacing: 3px;
}

/* Propositions */
.propositions {
  background: #0d5a0d;
  border-left: 2px solid #ffd700;
  display: grid;
  grid-template-rows: repeat(4, 1fr);
  gap: 2px;
}

.prop-bet {
  background: #0a4a0a;
  border: 1px solid #ffd700;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s;
  padding: 10px;
}

.prop-bet:hover {
  background: #0f6d0f;
}

.prop-bet.selected {
  background: #1a7a1a;
}

.prop-bet h4 {
  color: #ffd700;
  margin: 0;
  font-size: 0.9rem;
}

.prop-bet span {
  color: #fff;
  font-size: 0.8rem;
  margin-top: 5px;
}

/* Dice Display Area */
.dice-display-area {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  padding: 20px;
  border-radius: 15px;
  border: 3px solid #ffd700;
  display: none;
  z-index: 10;
}

.dice-display-area.active {
  display: block;
}

.dice-result {
  display: flex;
  gap: 20px;
  justify-content: center;
  margin-bottom: 10px;
}

.die-result {
  width: 60px;
  height: 60px;
  background: #fff;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.5rem;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
  animation: diceRoll 0.5s ease-out;
}

@keyframes diceRoll {
  0% { transform: rotate(0deg) scale(0); }
  50% { transform: rotate(180deg) scale(1.2); }
  100% { transform: rotate(360deg) scale(1); }
}

.dice-total {
  text-align: center;
  font-size: 1.5rem;
  color: #ffd700;
  font-weight: bold;
}

/* Control Panel */
.control-panel {
  background: rgba(0, 0, 0, 0.5);
  padding: 1.5rem;
  border-radius: 10px;
  margin-top: 1.5rem;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 2rem;
  flex-wrap: wrap;
}

.bet-amount-control {
  display: flex;
  align-items: center;
  gap: 10px;
}

.bet-amount-control label {
  color: #ffd700;
  font-weight: bold;
  text-transform: uppercase;
}

.bet-amount-control input {
  background: rgba(0, 0, 0, 0.5);
  border: 2px solid #ffd700;
  color: #fff;
  padding: 8px 15px;
  border-radius: 5px;
  width: 100px;
  text-align: center;
  font-size: 1.1rem;
  font-weight: bold;
}

.roll-button {
  background: #dc2626;
  color: #fff;
  border: none;
  padding: 12px 40px;
  border-radius: 25px;
  font-size: 1.2rem;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 2px;
  cursor: pointer;
  transition: all 0.3s;
  box-shadow: 0 5px 15px rgba(220, 38, 38, 0.4);
}

.roll-button:hover {
  background: #ef4444;
  transform: translateY(-2px);
  box-shadow: 0 7px 20px rgba(220, 38, 38, 0.6);
}

.roll-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Game Status */
.game-status {
  text-align: center;
  margin-top: 1rem;
  padding: 1rem;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 10px;
}

.game-phase {
  color: #ffd700;
  font-size: 1.2rem;
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-bottom: 0.5rem;
}

.result-message {
  font-size: 1.5rem;
  font-weight: bold;
  padding: 1rem;
  border-radius: 10px;
  margin-top: 1rem;
  display: none;
}

.result-message.win {
  background: rgba(34, 197, 94, 0.2);
  color: #22c55e;
  border: 2px solid #22c55e;
  display: block;
}

.result-message.loss {
  background: rgba(239, 68, 68, 0.2);
  color: #ef4444;
  border: 2px solid #ef4444;
  display: block;
}

/* Chip on bet area */
.bet-chip {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40px;
  height: 40px;
  background: radial-gradient(circle, #ff0000, #8b0000);
  border-radius: 50%;
  display: none;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: bold;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
  border: 3px dashed #fff;
}

.selected .bet-chip {
  display: flex;
}

@media (max-width: 768px) {
  .craps-table {
    grid-template-columns: 1fr;
  }
  
  .dont-pass-bar span {
    writing-mode: horizontal-tb;
  }
  
  .numbers-area {
    grid-template-columns: repeat(3, 1fr);
  }
}
</style>

