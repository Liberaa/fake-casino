    ". c ."
    "d . e";
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  transform: rotateY(-90deg) translateZ(35px);
}
.die-face.face-5 .dot:nth-child(1) { grid-area: a; }
.die-face.face-5 .dot:nth-child(2) { grid-area: b; }
.die-face.face-5 .dot:nth-child(3) { grid-area: c; }
.die-face.face-5 .dot:nth-child(4) { grid-area: d; }
