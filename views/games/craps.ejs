<script src="/socket.io/socket.io.js"></script>
<script>
// [Keep the same JavaScript as before, it works fine]
(function() {
  const socket = io()
  const username = '<%= user.username %>'
  let currentCredits = Number('<%= user.credits %>')
  let selectedBet = null
  let point = null
  let isRolling = false

  window.selectBet = function(betType) {
    if (isRolling) return
    
    // Clear previous selections
    document.querySelectorAll('.selected').forEach(el => {
      el.classList.remove('selected')
    })
    
    // Add selected class
    if (betType === 'passLine') {
      document.querySelector('.pass-line').classList.add('selected')
    } else if (betType === 'dontPass') {
      document.querySelector('.dont-pass-bar').classList.add('selected')
    } else if (betType === 'field') {
      document.querySelector('.field-area').classList.add('selected')
    } else if (betType === 'come') {
      document.querySelector('.come-area').classList.add('selected')
    } else if (betType === 'any7' || betType === 'anyCraps') {
      document.querySelector(`[onclick="selectBet('${betType}')"]`).classList.add('selected')
    }
    
    selectedBet = betType
    
    // Update chip display
    document.querySelectorAll('.bet-chip').forEach(chip => {
      chip.textContent = document.getElementById('betAmount').value
    })
  }

  window.rollDice = async function() {
    if (isRolling || !selectedBet) {
      if (!selectedBet) alert('Please select a bet first!')
      return
    }
    
    const betAmount = Number(document.getElementById('betAmount').value)
    if (betAmount <= 0 || betAmount > currentCredits) {
      alert(`Invalid bet! You have $${currentCredits.toFixed(2)}`)
      return
    }
    
    isRolling = true
    document.getElementById('rollBtn').disabled = true
    
    try {
      const res = await fetch('/games/craps', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ betAmount, betType: selectedBet, point })
      })
      
      const data = await res.json()
      
      if (!data.success) {
        alert(data.error || 'Roll failed')
        isRolling = false
        document.getElementById('rollBtn').disabled = false
        return
      }
      
      // Show dice
      const diceSymbols = ['', 'âš€', 'âš', 'âš‚', 'âšƒ', 'âš„', 'âš…']
      document.getElementById('diceDisplay').classList.add('active')
      document.getElementById('die1').textContent = diceSymbols[data.die1]
      document.getElementById('die2').textContent = diceSymbols[data.die2]
      document.getElementById('diceTotal').textContent = data.total
      
      // Update credits
      currentCredits = data.credits
      document.getElementById('credits').textContent = currentCredits.toFixed(2)
      
      // Update point
      if (data.point && !data.gameOver) {
        point = data.point
        document.querySelectorAll('.point-box').forEach(box => {
          box.classList.remove('point')
          if (box.dataset.number == data.point) {
            box.classList.add('point')
          }
        })
        document.getElementById('gamePhase').textContent = `Point is ${data.point} - Roll to hit the point!`
        
        // Show come bet option
        document.querySelector('.come-area').style.display = 'block'
      }
      
      // Handle game over
      if (data.gameOver) {
        const msg = document.getElementById('resultMessage')
        if (data.winAmount > 0) {
          msg.textContent = `ðŸŽ‰ Winner! You won $${data.winAmount.toFixed(2)}!`
          msg.className = 'result-message win'
        } else {
          msg.textContent = `ðŸ˜¢ You lost $${betAmount.toFixed(2)}`
          msg.className = 'result-message loss'
        }
        
        document.getElementById('rollBtn').style.display = 'none'
        document.getElementById('newGameBtn').style.display = 'inline-block'
        
        socket.emit('game:result', {
          username,
          gameType: 'craps',
          result: data.winAmount > 0 ? 'win' : 'loss',
          amount: data.winAmount || betAmount
        })
      } else {
        isRolling = false
        document.getElementById('rollBtn').disabled = false
      }
      
      // Hide dice after 2 seconds
      setTimeout(() => {
        document.getElementById('diceDisplay').classList.remove('active')
      }, 2000)
      
    } catch (error) {
      console.error('Error:', error)
      alert('Roll failed')
      isRolling = false
      document.getElementById('rollBtn').disabled = false
    }
  }

  window.newGame = function() {
    point = null
    selectedBet = null
    isRolling = false
    
    document.querySelectorAll('.selected').forEach(el => {
      el.classList.remove('selected')
    })
    
    document.querySelectorAll('.point-box').forEach(box => {
      box.classList.remove('point')
    })
    
    document.querySelector('.come-area').style.display = 'none'
    document.getElementById('gamePhase').textContent = 'Come Out Roll - Place Your Bets'
    document.getElementById('resultMessage').className = 'result-message'
    document.getElementById('rollBtn').style.display = 'inline-block'
    document.getElementById('rollBtn').disabled = false
    document.getElementById('newGameBtn').style.display = 'none'
  }
})()
</script>

