<script src="/socket.io/socket.io.js"></script>
<script>
(function() {
  const socket = io()
  const username = '<%= user.username %>'
  let currentCredits = Number('<%= user.credits %>')
  let currentGameId = null
  let isPlaying = false

  function updateBalance(amount) {
    currentCredits = amount
    document.getElementById('credits').textContent = currentCredits.toFixed(2)
  }

  function renderCard(card, isHidden = false) {
    if (isHidden) {
      const div = document.createElement('div')
      div.className = 'card-back new-card'
      div.textContent = 'üÉè'
      setTimeout(() => div.classList.remove('new-card'), 600)
      return div
    }
    
    const div = document.createElement('div')
    div.className = 'card new-card'
    div.style.background = 'white'
    div.style.color = card.includes('‚ô•') || card.includes('‚ô¶') ? 'red' : 'black'
    div.style.fontSize = '2rem'
    div.style.display = 'flex'
    div.style.alignItems = 'center'
    div.style.justifyContent = 'center'
    div.textContent = card
    setTimeout(() => div.classList.remove('new-card'), 600)
    return div
  }

  window.startGame = async function() {
    if (isPlaying) return
    
    const betAmount = Number(document.getElementById('betAmount').value)
    
    if (betAmount <= 0 || betAmount > currentCredits) {
      alert(`Invalid bet! You have ${currentCredits.toFixed(2)} coins`)
      return
    }
    
    isPlaying = true
    document.getElementById('betControls').style.display = 'none'
    document.getElementById('gameControls').style.display = 'flex'
    
    try {
      const res = await fetch('/games/blackjack', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ betAmount })
      })
      
      const data = await res.json()
      
      if (!data.success) {
        alert(data.error || 'Failed to start game')
        resetGame()
        return
      }
      
      currentGameId = data.gameId
      updateBalance(data.credits || currentCredits - betAmount)
      
      document.getElementById('playerHand').innerHTML = ''
      document.getElementById('dealerHand').innerHTML = ''
      
      data.playerHand.forEach(card => {
        document.getElementById('playerHand').appendChild(renderCard(card))
      })
      
      document.getElementById('dealerHand').appendChild(renderCard(data.dealerHand[0]))
      document.getElementById('dealerHand').appendChild(renderCard('', true))
      
      document.getElementById('playerScore').textContent = `Score: ${data.playerScore}`
      
      if (data.gameOver) {
        endGame(data)
      }
    } catch (error) {
      console.error('Start game error:', error)
      alert('Failed to start game')
      resetGame()
    }
  }

  window.hit = async function() {
    if (!currentGameId) return
    
    try {
      const res = await fetch('/games/blackjack', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
          gameId: currentGameId,
          action: 'hit'
        })
      })
      
      const data = await res.json()
      
      if (!data.success) {
        alert(data.error || 'Action failed')
        return
      }
      
      const newCard = data.playerHand[data.playerHand.length - 1]
      document.getElementById('playerHand').appendChild(renderCard(newCard))
      
      document.getElementById('playerScore').textContent = `Score: ${data.playerScore}`
      
      if (data.gameOver) {
        endGame(data)
      }
    } catch (error) {
      console.error('Hit error:', error)
    }
  }

  window.stand = async function() {
    if (!currentGameId) return
    
    try {
      const res = await fetch('/games/blackjack', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
          gameId: currentGameId,
          action: 'stand'
        })
      })
      
      const data = await res.json()
      
      if (!data.success) {
        alert(data.error || 'Action failed')
        return
      }
      
      const dealerHand = document.getElementById('dealerHand')
      dealerHand.innerHTML = ''
      
      data.dealerHand.forEach(card => {
        dealerHand.appendChild(renderCard(card))
      })
      
      document.getElementById('dealerScore').textContent = `Score: ${data.dealerScore}`
      
      endGame(data)
    } catch (error) {
      console.error('Stand error:', error)
    }
  }

  function endGame(data) {
    currentGameId = null
    isPlaying = false
    
    document.getElementById('gameControls').style.display = 'none'
    document.getElementById('newGameControl').style.display = 'block'
    
    updateBalance(data.credits)
    
    const result = document.getElementById('result')
    if (data.result === 'win') {
      result.textContent = `üéâ You won ${data.winAmount.toFixed(2)} coins!`
      result.className = 'game-result win show'
    } else if (data.result === 'push') {
      result.textContent = `ü§ù Push! Bet returned`
      result.className = 'game-result push show'
    } else {
      result.textContent = `üò¢ You lost`
      result.className = 'game-result loss show'
    }
    
    socket.emit('game:result', {
      username,
      gameType: 'blackjack',
      result: data.result,
      amount: data.winAmount || 0
    })
  }

  window.resetGame = function() {
    currentGameId = null
    isPlaying = false
    document.getElementById('betControls').style.display = 'flex'
    document.getElementById('gameControls').style.display = 'none'
    document.getElementById('newGameControl').style.display = 'none'
    document.getElementById('result').classList.remove('show')
    document.getElementById('playerHand').innerHTML = ''
    document.getElementById('dealerHand').innerHTML = ''
    document.getElementById('playerScore').textContent = ''
    document.getElementById('dealerScore').textContent = ''
  }
})()
</script>
