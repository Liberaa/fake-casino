<style>
.blackjack-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}

.blackjack-header {
  text-align: center;
  margin-bottom: 2rem;
}

.blackjack-header h1 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.balance-display {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 1rem 2rem;
  border-radius: 15px;
  display: inline-block;
  font-size: 1.3rem;
  font-weight: bold;
  box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
}

.balance-display span {
  color: #fbbf24;
  font-size: 1.5rem;
}

.blackjack-table {
  background: linear-gradient(135deg, #1e3a1e 0%, #0f5132 100%);
  border-radius: 20px;
  padding: 3rem 2rem;
  margin-bottom: 2rem;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  min-height: 500px;
  position: relative;
}

.deck-position {
  position: absolute;
  left: 2rem;
  top: 50%;
  transform: translateY(-50%);
  width: 100px;
  height: 140px;
}

.deck-stack {
  position: relative;
  width: 100px;
  height: 140px;
}

.deck-card {
  position: absolute;
  width: 100px;
  height: 140px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 3rem;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.6);
  border: 2px solid rgba(255, 255, 255, 0.2);
}

.deck-card:nth-child(1) {
  transform: translateY(0px);
  z-index: 5;
}

.deck-card:nth-child(2) {
  transform: translateY(-2px);
  z-index: 4;
  opacity: 0.9;
}

.deck-card:nth-child(3) {
  transform: translateY(-4px);
  z-index: 3;
  opacity: 0.8;
}

.deck-card:nth-child(4) {
  transform: translateY(-6px);
  z-index: 2;
  opacity: 0.7;
}

.deck-card:nth-child(5) {
  transform: translateY(-8px);
  z-index: 1;
  opacity: 0.6;
}

.dealer-section, .player-section {
  margin-bottom: 3rem;
}

.dealer-section h3, .player-section h3 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
  text-align: center;
}

.hand {
  display: flex;
  justify-content: center;
  gap: 1rem;
  min-height: 140px;
  flex-wrap: wrap;
}

.card {
  width: 100px;
  height: 140px;
  border-radius: 8px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.4);
  transition: transform 0.3s ease;
}

.card.new-card {
  animation: cardFromDeck 0.6s ease-out;
}

@keyframes cardFromDeck {
  from {
    opacity: 0;
    transform: translate(-800px, 0) scale(0.5) rotate(-15deg);
  }
  to {
    opacity: 1;
    transform: translate(0, 0) scale(1) rotate(0deg);
  }
}

.card:hover {
  transform: translateY(-10px) scale(1.05);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.6);
}

.card-back {
  width: 100px;
  height: 140px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 3rem;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.4);
}

.card-back.flip {
  animation: cardFlip 0.6s ease-out;
}

@keyframes cardFlip {
  0% {
    transform: rotateY(0deg);
  }
  50% {
    transform: rotateY(90deg);
  }
  100% {
    transform: rotateY(0deg);
  }
}

.score {
  text-align: center;
  font-size: 1.8rem;
  font-weight: bold;
  color: #fbbf24;
  margin-top: 1rem;
}

.game-controls {
  text-align: center;
  margin-bottom: 2rem;
}

.bet-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.bet-input-group {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: rgba(0, 0, 0, 0.3);
  padding: 0.5rem 1rem;
  border-radius: 10px;
  border: 2px solid rgba(255, 255, 255, 0.1);
}

.bet-input-group label {
  font-weight: bold;
  color: #fbbf24;
}

#betAmount {
  background: rgba(255, 255, 255, 0.1);
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 5px;
  color: #fff;
  font-size: 1rem;
  font-weight: bold;
  width: 120px;
  text-align: center;
}

#betAmount:focus {
  outline: none;
  background: rgba(255, 255, 255, 0.2);
}

.action-buttons {
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.btn-primary, .btn-secondary {
  padding: 0.8rem 2rem;
  font-size: 1.1rem;
  font-weight: bold;
  border: none;
  border-radius: 10px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
}

.btn-primary:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 7px 20px rgba(102, 126, 234, 0.6);
}

.btn-primary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
  border: 2px solid rgba(255, 255, 255, 0.3);
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.2);
}

.game-result {
  text-align: center;
  font-size: 2rem;
  font-weight: bold;
  margin: 2rem 0;
  padding: 1rem;
  border-radius: 10px;
  display: none;
}

.game-result.win {
  background: rgba(34, 197, 94, 0.2);
  color: #22c55e;
  border: 2px solid #22c55e;
}

.game-result.loss {
  background: rgba(239, 68, 68, 0.2);
  color: #ef4444;
  border: 2px solid #ef4444;
}

.game-result.push {
  background: rgba(251, 191, 36, 0.2);
  color: #fbbf24;
  border: 2px solid #fbbf24;
}

.game-result.show {
  display: block;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.game-rules {
  background: rgba(0, 0, 0, 0.3);
  padding: 1.5rem;
  border-radius: 10px;
  margin-bottom: 2rem;
  border: 2px solid rgba(255, 255, 255, 0.1);
}

.game-rules h3 {
  margin-top: 0;
  color: #fbbf24;
}

.btn-back {
  display: inline-block;
  padding: 0.8rem 2rem;
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
  text-decoration: none;
  border-radius: 10px;
  transition: all 0.3s ease;
}

.btn-back:hover {
  background: rgba(255, 255, 255, 0.2);
}
</style>

<div class="blackjack-container">
  <div class="blackjack-header">
    <h1>üÉè Blackjack</h1>
    <div class="balance-display">
      üí∞ Balance: <span id="credits"><%= user.credits.toFixed(2) %></span> Coins
