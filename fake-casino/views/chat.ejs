<script>
// Use userId from navbar (already declared there)
// Don't redeclare it!
const chatUsername = '<%= user.username %>'

// Generate consistent color for each user
const userColors = {}
function getUserColor(username) {
  if (!userColors[username]) {
    const colors = ['#667eea', '#764ba2', '#f093fb', '#4facfe', '#43e97b', '#fa709a', '#fee140', '#30cfd0']
    const hash = username.split('').reduce((acc, char) => acc + char.charCodeAt(0), 0)
    userColors[username] = colors[hash % colors.length]
  }
  return userColors[username]
}

// Typing indicator
let typingTimer
const typingTimeout = 1000
let isTyping = false

document.getElementById('chatInput').addEventListener('input', () => {
  if (!isTyping) {
    isTyping = true
    socket.emit('chat:typing', { username: chatUsername })
  }
  
  clearTimeout(typingTimer)
  typingTimer = setTimeout(() => {
    isTyping = false
    socket.emit('chat:stopTyping', { username: chatUsername })
  }, typingTimeout)
})

const typingUsers = new Set()
socket.on('chat:userTyping', (data) => {
  if (data.username !== chatUsername) {
    typingUsers.add(data.username)
    updateTypingIndicator()
  }
})

socket.on('chat:userStopTyping', (data) => {
  typingUsers.delete(data.username)
  updateTypingIndicator()
})

function updateTypingIndicator() {
  const indicator = document.getElementById('typingIndicator')
  if (typingUsers.size === 0) {
    indicator.textContent = ''
  } else if (typingUsers.size === 1) {
    indicator.textContent = `${Array.from(typingUsers)[0]} is typing...`
  } else {
    indicator.textContent = `${typingUsers.size} people are typing...`
  }
}

// Emoji picker
document.getElementById('emojiBtn').addEventListener('click', () => {
  document.getElementById('emojiPicker').classList.toggle('show')
})

document.querySelectorAll('.emoji').forEach(emoji => {
  emoji.addEventListener('click', () => {
    const input = document.getElementById('chatInput')
    input.value += emoji.dataset.emoji
    input.focus()
    document.getElementById('emojiPicker').classList.remove('show')
  })
})

// Close emoji picker when clicking outside
document.addEventListener('click', (e) => {
  if (!e.target.closest('.emoji-btn') && !e.target.closest('.emoji-picker')) {
    document.getElementById('emojiPicker').classList.remove('show')
  }
})

socket.emit('chat:loadHistory')
socket.emit('lobby:join', { username: chatUsername })

socket.on('chat:history', (messages) => {
  const chatMessages = document.getElementById('chatMessages')
  chatMessages.innerHTML = ''
  messages.forEach(msg => {
    appendMessage(msg.username, msg.message, new Date(msg.createdAt))
  })
  scrollToBottom()
})

socket.on('chat:newMessage', (data) => {
  appendMessage(data.username, data.message, new Date(data.timestamp))
  scrollToBottom()
})

socket.on('lobby:updateUsers', (data) => {
  document.getElementById('onlineCount').textContent = data.count
})

document.getElementById('chatForm').addEventListener('submit', (e) => {
  e.preventDefault()
  const input = document.getElementById('chatInput')
  const message = input.value.trim()
  
  if (message) {
    // Use userId from navbar
    socket.emit('chat:message', { userId: userId, username: chatUsername, message })
    input.value = ''
    socket.emit('chat:stopTyping', { username: chatUsername })
    isTyping = false
  }
})

function appendMessage(user, message, timestamp) {
  const chatMessages = document.getElementById('chatMessages')
  const messageDiv = document.createElement('div')
  messageDiv.className = 'chat-message'
  
  // Add own-message class if it's the current user
  if (user === chatUsername) {
    messageDiv.classList.add('own-message')
  }
  
  const time = timestamp.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })
  const userColor = getUserColor(user)
  
  messageDiv.style.setProperty('--user-color', userColor)
  
  messageDiv.innerHTML = `
    <div class="message-header">
      <span class="message-username">${escapeHtml(user)}</span>
      <span class="message-time">${time}</span>
    </div>
    <div class="message-content">${escapeHtml(message)}</div>
  `
  
  chatMessages.appendChild(messageDiv)
}

function scrollToBottom() {
  const chatMessages = document.getElementById('chatMessages')
  chatMessages.scrollTop = chatMessages.scrollHeight
}

function escapeHtml(text) {
  const div = document.createElement('div')
  div.textContent = text
  return div.innerHTML
}
</script>

