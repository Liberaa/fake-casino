  color: #fff;
  font-size: 1rem;
}

#chatInput:focus {
  outline: none;
  border-color: #667eea;
}

.emoji-btn {
  padding: 0.75rem 1rem;
  background: rgba(255, 255, 255, 0.1);
  border: none;
  border-radius: 10px;
  cursor: pointer;
  font-size: 1.2rem;
  transition: all 0.3s;
}

.emoji-btn:hover {
