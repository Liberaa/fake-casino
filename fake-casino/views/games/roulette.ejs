<script>
// Declare all variables first
let userCredits = Number('<%= user.credits %>')
let selectedBetType = null
let isSpinning = false
let moonBets = []
let sunBets = []
let starBets = []

let lastResults = [] // Track last 100 results

// Update stats display
function updateStats() {
  const moonCount = lastResults.filter(r => r === 'üåô').length
  const sunCount = lastResults.filter(r => r === '‚òÄÔ∏è').length
  const starCount = lastResults.filter(r => r === '‚≠ê').length
  
  document.getElementById('moonCount').textContent = moonCount
  document.getElementById('sunCount').textContent = sunCount
  document.getElementById('starCount').textContent = starCount
}

const socket = io()
const username = '<%= user.username %>'
const userId = '<%= user._id %>'

let timer = 10.00
let timerInterval = null
let canBet = true
let activeBets = []
let roundInProgress = false

// Socket event listeners for multiplayer
socket.on('roulette:init', (data) => {
  console.log('Joined roulette game:', data)
  timer = parseFloat(data.timer)
  canBet = data.canBet
  lastResults = data.history
  updateStats()
})

socket.on('roulette:timerUpdate', (data) => {
  timer = parseFloat(data.timer)
  document.getElementById('timerValue').textContent = data.timer
})

socket.on('roulette:roundStarted', () => {
  console.log('New round started')
  canBet = true
  activeBets = []
  roundInProgress = false
  
  // Clear all bet lists
  document.getElementById('moonBetsList').innerHTML = ''
  document.getElementById('sunBetsList').innerHTML = ''
  document.getElementById('starBetsList').innerHTML = ''
  
  moonBets = []
  sunBets = []
  starBets = []
  updateTotals()
  
  generateReel()
})

socket.on('roulette:clearBets', () => {
  // Clear bet displays
  document.getElementById('moonBetsList').innerHTML = ''
  document.getElementById('sunBetsList').innerHTML = ''
  document.getElementById('starBetsList').innerHTML = ''
  moonBets = []
  sunBets = []
  starBets = []
  updateTotals()
})

socket.on('roulette:betPlaced', (data) => {
  console.log('Bet placed:', data)
  addBetToList(data.type, data.username, data.amount)
})

socket.on('roulette:betAccepted', (data) => {
  userCredits = data.credits
  document.getElementById('userBalance').textContent = userCredits.toFixed(2)
})

socket.on('roulette:spin', (data) => {
  console.log('Spinning to:', data.winningSymbol)
  roundInProgress = true
  document.getElementById('rollingText').style.display = 'block'
  animateReel(data.winningSymbol)
})

socket.on('roulette:result', (data) => {
  console.log('Round result:', data)
  document.getElementById('rollingText').style.display = 'none'
  
  // Update history
  lastResults = data.history
  updateStats()
  
  // Find my result
  const myResult = data.results.find(r => r.userId === userId)
  if (myResult) {
    userCredits = myResult.credits
    document.getElementById('userBalance').textContent = userCredits.toFixed(2)
    
    const popup = document.getElementById('resultPopup')
    if (myResult.totalWinnings > 0) {
      popup.textContent = `üéâ You won ${myResult.totalWinnings.toFixed(2)} Brap Coins!`
      popup.className = 'result-popup win show'
    } else {
      popup.textContent = `üò¢ Better luck next time!`
      popup.className = 'result-popup loss show'
    }
    
    setTimeout(() => {
      popup.classList.remove('show')
    }, 3000)
  }
})

socket.on('roulette:error', (data) => {
  alert(data.message)
})

// Generate initial reel with looping animation
function generateReel() {
  const container = document.getElementById('reelContainer')
  const symbols = []
  
  // Create repeating symbols for seamless loop (40 total)
  for (let i = 0; i < 40; i++) {
    const symbol = i % 2 === 0 ? 'üåô' : '‚≠ê'
    symbols.push(`
      <div class="reel-slot ${symbol === 'üåô' ? 'moon' : 'star'}">
        ${symbol}
      </div>
    `)
  }
  
  container.innerHTML = symbols.join('')
  container.classList.remove('stopping')
  container.classList.add('looping')
}

// Animate reel spinning
function animateReel(finalSymbol) {
  const container = document.getElementById('reelContainer')
  
  // Stop the loop, create final strip
  container.classList.remove('looping')
  
  const symbols = []
  
  // 100 random symbols
  for (let i = 0; i < 100; i++) {
    const symbol = Math.random() > 0.5 ? 'üåô' : '‚≠ê'
    symbols.push(`
      <div class="reel-slot ${symbol === 'üåô' ? 'moon' : 'star'}">
        ${symbol}
      </div>
    `)
  }
  
  // Add ONE winning symbol at position 100
  symbols.push(`
    <div class="reel-slot ${finalSymbol === 'üåô' ? 'moon' : 'star'}">
      ${finalSymbol}
    </div>
  `)
  
  // Add 20 more random symbols AFTER the winner for smooth ending
  for (let i = 0; i < 20; i++) {
    const symbol = Math.random() > 0.5 ? 'üåô' : '‚≠ê'
    symbols.push(`
      <div class="reel-slot ${symbol === 'üåô' ? 'moon' : 'star'}">
        ${symbol}
      </div>
    `)
  }
  
  container.innerHTML = symbols.join('')
  
  // Start stopping animation
  setTimeout(() => {
    container.classList.add('stopping')
  }, 50)
}

// Start timer countdown
function startTimer() {
  timer = 10.00
  canBet = true
  activeBets = []
  
  // Clear all bet lists
  document.getElementById('moonBetsList').innerHTML = ''
  document.getElementById('sunBetsList').innerHTML = ''
  document.getElementById('starBetsList').innerHTML = ''
  
  moonBets = []
  sunBets = []
  starBets = []
  
  updateTotals()
  
  if (timerInterval) clearInterval(timerInterval)
  
  timerInterval = setInterval(() => {
    timer -= 0.01
    
    if (timer <= 0) {
      timer = 0
      canBet = false
      clearInterval(timerInterval)
      // Execute all active bets
      if (activeBets.length > 0) {
        executeBets()
      } else {
        setTimeout(() => startTimer(), 2000)
      }
    }
    document.getElementById('timerValue').textContent = Math.max(0, timer).toFixed(2)
  }, 10)
}

// Execute all bets when timer hits 0
async function executeBets() {
  roundInProgress = true
  document.getElementById('rollingText').style.display = 'block'
  
  // Process all bets
  let totalWinnings = 0
  let wonAnyBet = false
  let resultSymbol = 'üåô'
  
  try {
    // Make API call to get the winning symbol
    const firstBet = activeBets[0]
    const res = await fetch('/games/roulette', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ 
        betAmount: firstBet.amount, 
        betType: firstBet.betType, 
        betValue: firstBet.betValue 
      })
    })
    
    const data = await res.json()
    console.log('Response:', data)
    
    if (data.success) {
      // Determine result symbol from first bet
      if (data.result === 'win') {
        resultSymbol = firstBet.type === 'moon' ? 'üåô' : firstBet.type === 'sun' ? '‚òÄÔ∏è' : '‚≠ê'
      } else {
        resultSymbol = firstBet.type === 'moon' ? '‚≠ê' : 'üåô'
      }
      
      // Now check ALL bets against the winning symbol
      for (const bet of activeBets) {
        let betWon = false
        let betWinAmount = 0
        
        if (bet.type === 'moon' && resultSymbol === 'üåô') {
          betWon = true
          betWinAmount = bet.amount * 2
        } else if (bet.type === 'star' && resultSymbol === '‚≠ê') {
          betWon = true
          betWinAmount = bet.amount * 2
        } else if (bet.type === 'sun' && resultSymbol === '‚òÄÔ∏è') {
          betWon = true
          betWinAmount = bet.amount * 14
        }
        
        if (betWon) {
          totalWinnings += betWinAmount
          wonAnyBet = true
        }
      }
      
      // Update user credits
      userCredits += totalWinnings
      document.getElementById('userBalance').textContent = userCredits.toFixed(2)
      
      // Animate reel
      animateReel(resultSymbol)
      
      // Wait for stopping animation to complete (3 seconds) before showing result
      setTimeout(() => {
        document.getElementById('rollingText').style.display = 'none'
        
        // Add result to history and update stats
        lastResults.push(resultSymbol)
        if (lastResults.length > 100) {
          lastResults.shift()
        }
        updateStats()
        
        const popup = document.getElementById('resultPopup')
        if (wonAnyBet) {
          popup.textContent = `üéâ You won ${totalWinnings.toFixed(2)} Brap Coins!`
          popup.className = 'result-popup win show'
        } else {
          const totalBet = activeBets.reduce((sum, bet) => sum + bet.amount, 0)
          popup.textContent = `üò¢ You lost ${totalBet.toFixed(2)} Brap Coins`
          popup.className = 'result-popup loss show'
        }
        
        setTimeout(() => {
          popup.classList.remove('show')
          roundInProgress = false
          generateReel()
          startTimer()
        }, 3000)
        
        socket.emit('game:result', {
          username,
          gameType: 'roulette',
          result: wonAnyBet ? 'win' : 'loss',
          amount: wonAnyBet ? totalWinnings : activeBets.reduce((sum, bet) => sum + bet.amount, 0)
        })
      }, 3200)
    } else {
      document.getElementById('rollingText').style.display = 'none'
      alert(data.error || 'Bet failed')
      roundInProgress = false
      startTimer()
    }
  } catch (error) {
    console.error('Bet error:', error)
    document.getElementById('rollingText').style.display = 'none'
    alert('Network error. Please try again.')
    roundInProgress = false
    startTimer()
  }
}

function clearBet() {
  document.getElementById('betAmount').value = ''
}

function adjustBet(amount) {
  const input = document.getElementById('betAmount')
  const current = parseFloat(input.value) || 0
  input.value = Math.max(0.01, current + amount).toFixed(2)
}

function halfBet() {
  const input = document.getElementById('betAmount')
  const current = parseFloat(input.value) || 0
  input.value = Math.max(0.01, current / 2).toFixed(2)
}

function doubleBet() {
  const input = document.getElementById('betAmount')
  const current = parseFloat(input.value) || 0
  input.value = (current * 2).toFixed(2)
}

function maxBet() {
  document.getElementById('betAmount').value = userCredits.toFixed(2)
}

function selectBet(type) {
  if (!canBet || roundInProgress) {
    alert('Betting closed for this round')
    return
  }

  const betAmount = parseFloat(document.getElementById('betAmount').value)
  if (!betAmount || betAmount <= 0) {
    alert('Please enter a valid bet amount')
    return
  }

  if (betAmount > userCredits) {
    alert('Insufficient credits')
    return
  }

  // Send bet to server via socket
  socket.emit('roulette:placeBet', {
    userId,
    username,
    type,
    amount: betAmount
  })
}

